{
  "info": {
    "name": "LearnSmart Prep API",
    "description": "EdTech Admin Panel Backend API Collection",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Classes",
      "item": [
        {
          "name": "Get All Classes",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/classes"
          }
        },
        {
          "name": "Get Class by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/classes/:id"
          }
        },
        {
          "name": "Create Class",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/classes",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "raw": "{\"name\": \"SSC\", \"description\": \"Secondary School Certificate\"}"
            }
          }
        },
        {
          "name": "Update Class",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/classes/:id",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "raw": "{\"name\": \"SSC Updated\"}"
            }
          }
        },
        {
          "name": "Delete Class",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/classes/:id"
          }
        }
      ]
    },
